{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "mcp/github"],
      "disabled": false,
      "autoApprove": [
        "create_repository",
        "create_or_update_file",
        "create_pull_request",
        "create_issue",
        "get_file_contents",
        "list_repositories",
        "search_repositories",
        "get_repository",
        "list_issues",
        "get_issue",
        "update_issue",
        "list_pull_requests",
        "get_pull_request",
        "create_branch",
        "list_branches",
        "get_branch"
      ]
    }
  }
}
