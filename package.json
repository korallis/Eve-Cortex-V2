{
  "name": "eve-cortex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --watch --verbose",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:deps": "npx check-outdated",
    "deps:check": "npx npm-check-updates --doctor",
    "deps:update": "npx npm-check-updates -u",
    "deps:unused": "npx depcheck",
    "security:check": "npm audit && npx better-npm-audit audit",
    "github:setup-protection": "node scripts/setup-branch-protection.js setup",
    "github:protection-status": "node scripts/setup-branch-protection.js status",
    "ci:quality": "npm run lint && npm run type-check && npm run format:check",
    "ci:test": "npm run test:coverage",
    "ci:build": "npm run build",
    "ci:security": "npm run audit:security",
    "ci:full": "npm run ci:quality && npm run ci:security && npm run ci:test && npm run ci:build",
    "task:complete": "node scripts/automated-task-completion.js",
    "clean": "rm -rf .next out dist build",
    "clean:deps": "rm -rf node_modules package-lock.json && npm install",
    "analyze": "cross-env ANALYZE=true npm run build",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "ioredis": "^5.4.1",
    "lucide-react": "^0.525.0",
    "next": "^15.4.1",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.4",
    "postcss": "^8.5.1",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.15.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "audit-ci": "^7.1.0",
    "better-npm-audit": "^3.8.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.4.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^15.2.11",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "ts-jest": "^29.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "glob": "^11.0.0",
    "inflight": "npm:@isaacs/inflight@^1.0.6",
    "rimraf": "^6.0.1"
  }
}
